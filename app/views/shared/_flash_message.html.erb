<div class="flex justify-center">
</div>
<% flash.each do |type, message| %>
  <div class="py-1">
    <% if type == "notice" %>
      <div class="p-4 mb-4 text-sm font-medium text-blue-800 rounded-lg bg-blue-100">
        <%= message %>
      </div>
    <% elsif type == "alert" %>
      <div class="p-4 mb-4 text-sm font-medium text-red-800 rounded-lg bg-red-100">
        <span class="font-medium"><%= message %></span>
      </div>
    <% end %>
  </div>
<% end %>
</div>
